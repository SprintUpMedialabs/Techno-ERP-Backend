generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   
  firstName   String 
  lastName String
  password String
  verifyOtp Int
  verifyOtpExpireAt DateTime
  roles   String[]
  @@unique([id,email])
}
